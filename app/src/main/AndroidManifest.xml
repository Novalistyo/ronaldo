<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.yoyok.bookinventory">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name="id.co.yoyok.bookinventory.core.CoreApplication"
        android:allowBackup="true"
        android:icon="@drawable/coba1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="id.co.yoyok.bookinventory.activity.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="id.co.yoyok.bookinventory.activity.LoginActivity"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="id.co.yoyok.bookinventory.MainActivity"></activity>
        <activity
            android:name="id.co.yoyok.bookinventory.activity.BookFormActivity"
            android:label="@string/title_activity_book_form"
            android:parentActivityName="id.co.yoyok.bookinventory.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.co.yoyok.bookinventory.MainActivity" />
        </activity>
    </application>

</manifest>
